= form_with model: user, url: url, local: true, class: 'admin-form' do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label 'メールアドレス', for: :email
    = f.text_field :email, id: 'email', class: 'form-control'
  .form-group
    = f.label '送り先名前', for: :ship_to_name
    = f.text_field :ship_to_name, id: 'ship_to_name', class: 'form-control'
  .form-group
    = f.label '送り先住所', for: :ship_to_address
    = f.text_field :ship_to_address, id: 'ship_to_address', class: 'form-control'
  .checkbox
    = f.label :admin, for: :admin do
      = f.check_box :admin, id: 'admin'
      サイト管理者

  = f.submit '保存', class: 'btn btn-default'
