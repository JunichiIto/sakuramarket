= form_with model: @user, url: url, local: true do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this admin_user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :email
    = f.text_field :email, readonly: true
  .field
    = f.label :ship_name
    = f.text_field :ship_name
  .field
    = f.label :ship_address
    = f.text_field :ship_address
  .actions
    = f.submit 'Save'
