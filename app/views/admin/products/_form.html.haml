= form_with model: @product, url: url, multipart: true, local: true, class: 'admin-form' do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  = f.hidden_field :position, value: @product.position
  .form-group
    = f.label "商品名", for: :name
    = f.text_field :name, id: 'name', class: 'form-control'
  .form-group
    = f.label "画像", for: :image_file
    = f.file_field :image_file, id: 'image_file'
  .form-group
    = f.label "価格", for: :price
    = f.number_field :price, id: 'price', class: 'form-control'
  .form-group
    = f.label "説明", for: :description
    = f.text_area :description, id: 'description', class: 'form-control'
  .checkbox
    = f.label :hidden, for: :hidden do
      = f.check_box :hidden, id: 'hidden'
      商品を表示しない
  = f.submit '保存', class: 'btn btn-default'
