= form_for @admin_product do |f|
  - if @admin_product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_product.errors.count, "error")} prohibited this admin_product from being saved:"
      %ul
        - @admin_product.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :image_filename
    = f.text_field :image_filename
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :hidden
    = f.check_box :hidden
  .actions
    = f.submit 'Save'
