= form_for @product, url: url, multipart: true do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label "商品名", for: :product_name
    = f.text_field :name
  .field
    = f.label "商品画像", for: :product_image_file
    = f.file_field :image_file
  .field
    = f.label "価格", for: :product_price
    = f.number_field :price
  .field
    = f.label "商品説明", for: :product_description
    = f.text_area :description
  .field
    = f.label "商品を表示しない", for: :product_hidden
    = f.check_box :hidden
  .actions
    = f.submit '保存'
