.row
  .col-xs-5
    .row
      .col-xs-12
        = image_tag image_product_path(@product), class: 'product__image product__image--size-big product__image--shadow'
  .col-xs-7{ style: 'padding: 0 30px' }
    .row
      .col-xs-12
        %h1.product__name{ style: 'margin-top: 0' }= @product.name
        %p.product__price
          %span 価格:
          %span.product__price_value
            %strong= "￥#{@product.price}"
        %p.product__description= @product.description
    .row{ style: 'margin-top: 30px' }
      .col-xs-12
        = form_tag '#' do
          .form-group.form-inline.quantity_form
            %label{ for: 'quantity' } 数量:
            %input#quantity.form-control{ name: 'quantity', type: 'number', value: 1 }
          %button.btn.btn-block.btn-warning.btn_cart{ type: 'submit' } カートに入れる
